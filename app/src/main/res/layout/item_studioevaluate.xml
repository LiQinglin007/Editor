<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/color_white"
              android:orientation="vertical"
              android:paddingBottom="@dimen/px_20"
              android:paddingLeft="@dimen/px_20"
              android:paddingRight="@dimen/px_20">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/px_10"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.example.lql.editor.utils.CircleImageView
            android:id="@+id/item_studioevaluate_user_img"
            android:layout_width="@dimen/px_90"
            android:layout_height="@dimen/px_90"
            android:src="@drawable/fuwu"
            />


        <TextView
            android:id="@+id/item_studioevaluate_user_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_10"
            android:text=""/>

    </LinearLayout>

    <TextView
        android:id="@+id/item_studioevaluate_usercontent_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_10"
        android:text=""
        android:textColor="@color/color_333"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_10"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_studioevaluate_state_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/item_studioevaluate_time_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_10"
            android:gravity="right"
            android:text=""/>

    </LinearLayout>


</LinearLayout>
