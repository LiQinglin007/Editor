<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lql.editor.activity.myaccount.AboutUsActivity">

    <include layout="@layout/include_title_layout"></include>




    <ImageView
        android:src="@drawable/pic_about_us"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_400"/>

<TextView
    android:paddingLeft="@dimen/px_30"
    android:paddingBottom="@dimen/px_10"
    android:paddingTop="@dimen/px_30"
    android:text="关于我们"
    android:textColor="@color/color_333"
    android:textSize="@dimen/px_36"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>



    <TextView
        android:paddingLeft="@dimen/px_30"
        android:paddingBottom="@dimen/px_10"
        android:text="About us"
        android:textSize="@dimen/px_24"
        android:layout_width="match_parent"
        android:textColor="@color/color_666"
        android:layout_height="wrap_content"/>

<View
    android:paddingLeft="@dimen/px_30"
    android:paddingRight="@dimen/px_30"
    android:background="@color/color_e0e0e0"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px_1"></View>

<TextView
    android:paddingTop="@dimen/px_10"
    android:paddingLeft="@dimen/px_30"
    android:paddingRight="@dimen/px_30"
    android:textColor="@color/color_666"
    android:textSize="@dimen/px_32"
    android:text="我们致力于打造一个专业的论文编审业务支撑平台，千家正规杂志社入驻，上千位编辑在线快速审稿，快速查重与降重，为您扫平论文发表道路上的一切障碍！"
    android:layout_width="match_parent"
    android:layout_height="match_parent"/>


</LinearLayout>
