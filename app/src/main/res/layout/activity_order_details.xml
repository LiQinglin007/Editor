<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lql.editor.activity.myaccount.OrderDetailsActivity">


    <include layout="@layout/include_title_layout"></include>
    <ScrollView
        android:id="@+id/order_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <!--头部-->
    <LinearLayout
        android:background="@color/color_white"
        android:paddingTop="@dimen/px_10"
        android:paddingBottom="@dimen/px_10"
        android:paddingLeft="@dimen/px_20"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/orderdetails_img"
        android:layout_width="@dimen/px_120"
        android:layout_height="@dimen/px_120"
        fresco:placeholderImage="@drawable/fuwu"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_120"
        android:orientation="vertical"
        android:paddingLeft="@dimen/px_10"
        android:paddingRight="@dimen/px_10">


        <TextView
            android:id="@+id/orderdetails_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:layout_weight="1.5"
            android:text=""/>


        <TextView
            android:id="@+id/orderdetails_money_tv"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/px_10"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:text=""
            android:textColor="@color/actionsheet_red"/>

    </LinearLayout>


    </LinearLayout>
    <!--中间检测信息-->
    <LinearLayout
        android:layout_marginTop="@dimen/px_20"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@color/color_white"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginTop="@dimen/px_20"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/orderdetails_ly1_name_tv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/color_333"
                android:textSize="@dimen/px_30"
                android:text="检测结果"
                android:layout_marginLeft="@dimen/px_20"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/orderdetails_ly1_type_tv"
                android:textSize="@dimen/px_30"
                android:text=""
                android:textColor="@color/color_1AB394"
                android:layout_marginRight="@dimen/px_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:paddingTop="@dimen/px_50"
            android:paddingBottom="@dimen/px_50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/orderdetails_ly1_content_tv1"
                android:background="@color/color_white"
                android:layout_marginLeft="@dimen/px_20"
                android:layout_marginRight="@dimen/px_20"
                android:textSize="@dimen/px_45"
                android:gravity="center"
                android:textColor="@color/color_FF5C0F"
                android:layout_width="match_parent"
                android:text=""
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/orderdetails_ly1_content_tv2"
                android:layout_marginTop="@dimen/px_20"
                android:background="@color/color_white"
                android:layout_marginLeft="@dimen/px_20"
                android:layout_marginRight="@dimen/px_20"
                android:gravity="center"
                android:layout_width="match_parent"
                android:text=""
                android:layout_height="wrap_content"/>

        </LinearLayout>


    </LinearLayout>


    <!--稿件信息-->
    <LinearLayout
        android:id="@+id/orderdetails_ly2"
        android:layout_marginTop="@dimen/px_20"
        android:orientation="vertical"
        android:paddingTop="@dimen/px_20"
        android:paddingLeft="@dimen/px_20"
        android:paddingRight="@dimen/px_20"
        android:background="@color/color_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/orderdetails_ly2_name_tv"
            android:text="稿件信息"
            android:textColor="@color/color_333"
            android:textSize="@dimen/px_30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!--文章标题-->
        <LinearLayout
            android:orientation="horizontal"
            android:paddingTop="@dimen/px_15"
            android:paddingBottom="@dimen/px_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="文件标题:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text=""
                android:layout_marginLeft="@dimen/px_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/orderdetails_ly2_tv1"
                android:layout_weight="1"/>



        </LinearLayout>
        <View
            android:background="@color/color_C6C5C5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_2"></View>


        <!--学科方向-->
        <LinearLayout
            android:orientation="horizontal"
            android:paddingTop="@dimen/px_15"
            android:paddingBottom="@dimen/px_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="学科方向:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/orderdetails_ly2_tv2"
                android:text=""
                android:layout_marginLeft="@dimen/px_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <View
            android:background="@color/color_C6C5C5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_2"></View>

        <!--作者姓名-->
        <LinearLayout
            android:orientation="horizontal"
            android:paddingTop="@dimen/px_15"
            android:paddingBottom="@dimen/px_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="作者姓名:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/orderdetails_ly2_tv3"
                android:text=""
                android:layout_marginLeft="@dimen/px_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <View
            android:background="@color/color_C6C5C5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_2"></View>

        <!--作者职称-->
        <LinearLayout
            android:id="@+id/orderdetails_ly2_ly4"
            android:orientation="horizontal"
            android:paddingTop="@dimen/px_15"
            android:paddingBottom="@dimen/px_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="作者职称:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/orderdetails_ly2_tv4"
                android:text=""
                android:layout_marginLeft="@dimen/px_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <View
            android:id="@+id/orderdetails_ly2_v4"
            android:background="@color/color_C6C5C5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_2"></View>

        <!--作者学历-->
        <LinearLayout
            android:id="@+id/orderdetails_ly2_ly5"
            android:orientation="horizontal"
            android:paddingTop="@dimen/px_15"
            android:paddingBottom="@dimen/px_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="作者学历:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/orderdetails_ly2_tv5"
                android:text=""
                android:layout_marginLeft="@dimen/px_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <View
            android:id="@+id/orderdetails_ly2_v5"
            android:background="@color/color_C6C5C5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_2"></View>

        <!--见刊时间-->
        <LinearLayout
            android:id="@+id/orderdetails_ly2_ly6"
            android:orientation="horizontal"
            android:paddingTop="@dimen/px_15"
            android:paddingBottom="@dimen/px_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="见刊时间:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/orderdetails_ly2_tv6"
                android:text=""
                android:layout_marginLeft="@dimen/px_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <View
            android:id="@+id/orderdetails_ly2_v6"
            android:background="@color/color_C6C5C5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_2"></View>

        <!--文件名称-->
        <LinearLayout
            android:orientation="horizontal"
            android:paddingTop="@dimen/px_15"
            android:paddingBottom="@dimen/px_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="文件名称:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/orderdetails_ly2_tv7"
                android:text=""
                android:layout_marginLeft="@dimen/px_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

    <!--第三部分-->
    <LinearLayout
        android:id="@+id/orderdetails_ly3"
        android:layout_marginTop="@dimen/px_20"
        android:orientation="vertical"
        android:paddingTop="@dimen/px_20"
        android:paddingLeft="@dimen/px_20"
        android:paddingRight="@dimen/px_20"
        android:background="@color/color_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/orderdetails_ly3_name_tv"
            android:textColor="@color/color_333"
            android:textSize="@dimen/px_30"
            android:text="速审进度"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>



            <com.example.lql.editor.view.MyListView
                android:layout_marginTop="@dimen/px_10"
                android:id="@+id/order_details_mylist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </com.example.lql.editor.view.MyListView>



    </LinearLayout>

    </LinearLayout>
    </ScrollView>
</LinearLayout>
