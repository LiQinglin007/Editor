<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/color_white"
              android:paddingLeft="@dimen/px_20"
              android:paddingTop="@dimen/px_20"
              android:paddingBottom="@dimen/px_20"
              android:paddingRight="@dimen/px_20"
              android:orientation="horizontal">



    
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/item_myevaluate_img"
            android:layout_width="@dimen/px_150"
            android:layout_height="@dimen/px_150"
            fresco:placeholderImage="@drawable/fuwu"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/px_10"
            android:paddingRight="@dimen/px_10">


            <TextView
                android:textColor="@color/color_666"
                android:id="@+id/item_myevaluate_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textSize="@dimen/px_28"
                android:ellipsize="end"
                android:text=""/>



            <TextView
                android:id="@+id/item_myevaluate_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:textSize="@dimen/px_30"
                android:textColor="@color/color_333"
                android:layout_marginTop="@dimen/px_10"
                android:text=""
                 />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_myevaluate_time_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:textSize="@dimen/px_24"
                    android:textColor="@color/color_999999"/>

                <ImageView
                    android:id="@+id/item_myevaluate_state_img"
                    android:src="@drawable/icon_good"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

</LinearLayout>
