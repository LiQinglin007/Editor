<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/color_white"
              android:paddingLeft="@dimen/px_20"
              android:paddingRight="@dimen/px_20"
              android:paddingTop="@dimen/px_20"
              android:paddingBottom="@dimen/px_20"
              android:orientation="horizontal">





        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/item_collection_service_img"
            android:layout_width="@dimen/px_150"
            android:layout_height="@dimen/px_150"
            fresco:placeholderImage="@drawable/fuwu"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_150"
            android:orientation="vertical"
            android:paddingLeft="@dimen/px_10"
            android:paddingRight="@dimen/px_10">


            <TextView
                android:id="@+id/item_collection_service_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""/>




<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:gravity="end"
    android:layout_gravity="end"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_collection_service_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/px_10"
            android:layout_weight="1"
            android:text=""
            android:textColor="@color/color_e50000"/>

        <TextView
            android:layout_marginTop="@dimen/px_10"
            android:id="@+id/item_collection_service_number_tv"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="月销量0"
            android:textSize="@dimen/px_20"
            android:textColor="@color/color_999999"/>

    </LinearLayout>

<LinearLayout
    android:orientation="vertical"
    android:layout_width="0dp"
    android:layout_weight="0.5"
    android:layout_height="match_parent">


    <TextView
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/px_10"
        android:textColor="@color/color_1AB394"/>


    <TextView
        android:id="@+id/item_collection_service_cancel_tv"
        android:background="@drawable/back_collection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_10"
        android:paddingLeft="@dimen/px_20"
        android:paddingRight="@dimen/px_20"
        android:paddingTop="@dimen/px_10"
        android:paddingBottom="@dimen/px_10"
        android:text="取消收藏"
        android:textColor="@color/color_FF5C0F"/>
</LinearLayout>

</LinearLayout>



        </LinearLayout>

    </LinearLayout>




