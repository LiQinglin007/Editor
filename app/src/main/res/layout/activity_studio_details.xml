<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lql.editor.activity.studio.StudioDetailsActivity">


    <include layout="@layout/include_title_layout"></include>

    <ListView
        android:id="@+id/studio_re"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"></ListView>



    <View
        android:background="@color/color_e0e0e0"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_1"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <!--收藏-->
        <LinearLayout
            android:id="@+id/studio_collection_ly"
            android:layout_width="0dp"
            android:paddingTop="@dimen/px_10"
            android:paddingBottom="@dimen/px_10"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/studio_collection_img"
                android:layout_marginTop="@dimen/px_5"
                android:src="@drawable/icon_collection_nor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/studio_collection_tv"
                android:text="收藏工作室"
                android:gravity="center"
                android:layout_marginTop="@dimen/px_5"
                android:textSize="@dimen/px_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <View
            android:layout_width="@dimen/px_1"
            android:layout_height="@dimen/px_90"
            android:background="@color/color_e0e0e0"></View>
        <!--QQ-->
        <LinearLayout
            android:paddingTop="@dimen/px_10"
            android:paddingBottom="@dimen/px_10"
            android:id="@+id/studio_qq_ly"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/qq"
                android:layout_marginTop="@dimen/px_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:gravity="center_horizontal"
                android:layout_marginTop="@dimen/px_5"
                android:textSize="@dimen/px_20"
                android:text="联系小编"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <!--电话-->
        <LinearLayout
            android:paddingTop="@dimen/px_10"
            android:paddingBottom="@dimen/px_10"
            android:id="@+id/studio_phone_ly"
            android:layout_width="0dp"
            android:orientation="horizontal"
            android:layout_weight="2"
            android:background="@color/color_1AB394"
            android:gravity="center"
            android:layout_height="match_parent">

        <TextView
            android:id="@+id/studio_phone_tv"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:textColor="@color/color_white"
            android:text=""
            android:drawableLeft="@drawable/icon_phone1"
            android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>



</LinearLayout>
