<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="com.example.lql.editor.activity.myaccount.RechargeActivity">

    <include layout="@layout/include_title_layout"></include>




    <LinearLayout
        android:layout_marginTop="@dimen/px_20"
        android:paddingLeft="@dimen/px_20"
        android:paddingRight="@dimen/px_20"
        android:background="@color/color_white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_90">

        <TextView
            android:paddingBottom="@dimen/px_25"
            android:paddingTop="@dimen/px_25"
            android:textSize="@dimen/px_28"
            android:text="支付宝用户名"
            android:textColor="@color/color_333"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>


        <EditText
            android:id="@+id/accountsetting_name_ed"
            android:paddingBottom="@dimen/px_20"
            android:paddingTop="@dimen/px_20"
            android:hint="请输入账户名称"
            android:background="@null"
            android:textColor="@color/color_999999"
            android:layout_marginRight="@dimen/px_20"
            android:gravity="right"
            android:textSize="@dimen/px_28"
            android:layout_gravity="right"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <View
        android:background="@color/color_e0e0e0"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_1"></View>


    <LinearLayout
        android:paddingLeft="@dimen/px_20"
        android:paddingRight="@dimen/px_20"
        android:background="@color/color_white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_90">

        <TextView
            android:paddingBottom="@dimen/px_20"
            android:paddingTop="@dimen/px_20"
            android:textSize="@dimen/px_28"
            android:textColor="@color/color_333"
            android:text="支付宝账号"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>


        <EditText
            android:id="@+id/accountsetting_number_ed"
            android:paddingBottom="@dimen/px_25"
            android:paddingTop="@dimen/px_25"
            android:hint="请输入账户号"
            android:inputType="number"
            android:textColor="@color/color_999999"
            android:layout_marginRight="@dimen/px_20"
            android:background="@null"
            android:gravity="right"
            android:textSize="@dimen/px_28"
            android:layout_gravity="right"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>



    <Button
        android:id="@+id/accountsetting_submit_but"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_36"
        android:layout_marginRight="@dimen/px_36"
        android:layout_marginTop="@dimen/px_60"
        android:background="@drawable/back_sel"
        android:text="保存"
        android:textColor="@color/color_FFFFFF"
        android:textSize="@dimen/px_35"/>



</LinearLayout>
