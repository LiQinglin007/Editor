<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    >

    <!--title-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_FFFFFF"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="@dimen/px_20">

        <ImageView
            android:id="@+id/login_close"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/px_20"
            android:paddingRight="@dimen/px_20"
            android:src="@drawable/btn_close_login"/>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">


            <!--<RadioGroup-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:orientation="horizontal">-->

                <TextView
                    android:gravity="center"
                    android:id="@+id/login_radio"
                    android:layout_width="@dimen/px_140"
                    android:layout_height="@dimen/px_60"
                    android:background="@drawable/logintext_left_sle"
                    android:button="@null"
                    android:paddingBottom="@dimen/px_5"
                    android:paddingLeft="@dimen/px_40"
                    android:paddingRight="@dimen/px_40"
                    android:paddingTop="@dimen/px_5"
                    android:text="登录"
                    android:textColor="@color/color_FFFFFF"
                    android:textSize="@dimen/px_28"/>


                <TextView
                    android:gravity="center"
                    android:id="@+id/register_radio"
                    android:layout_width="@dimen/px_140"
                    android:layout_height="@dimen/px_60"
                    android:background="@drawable/logintext_right_no"
                    android:button="@null"
                    android:paddingBottom="@dimen/px_5"
                    android:paddingLeft="@dimen/px_40"
                    android:paddingRight="@dimen/px_40"
                    android:paddingTop="@dimen/px_5"
                    android:text="注册"
                    android:textColor="@color/color_1AB394"
                    android:textSize="@dimen/px_28"/>
            <!--</RadioGroup>-->

        </LinearLayout>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"
            android:visibility="invisible"/>


    </LinearLayout>

    <!--图标-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:paddingTop="@dimen/px_20"
        android:paddingBottom="@dimen/px_20"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo"/>


    </LinearLayout>

    <!--登录-->
    <LinearLayout
        android:id="@+id/login_ly"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_FFFFFF"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/px_10"
            android:paddingLeft="@dimen/px_24"
            android:paddingRight="@dimen/px_36"
            android:paddingTop="@dimen/px_10">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/px_10"
                android:src="@drawable/icon_phone"/>

            <EditText
                android:paddingLeft="@dimen/px_20"
                android:id="@+id/login_phone_ed"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/px_4"
                android:background="@null"
                android:inputType="number"
                android:maxLength="11"
                android:hint="请输入手机号"
                android:textColorHint="@color/color_ccc"
                android:paddingBottom="@dimen/px_15"
                android:paddingTop="@dimen/px_15"/>

        </LinearLayout>

        <View
            android:background="@color/color_e0e0e0"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_1"></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_FFFFFF"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/px_10"
            android:paddingLeft="@dimen/px_24"
            android:paddingRight="@dimen/px_36"
            android:paddingTop="@dimen/px_10">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/px_10"
                android:src="@drawable/icon_password"/>

            <EditText
                android:paddingLeft="@dimen/px_20"
                android:id="@+id/login_pwd_ed"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/px_4"
                android:background="@null"
                android:textColorHint="@color/color_ccc"
                android:digits="0123456789qwertyuioplkjhgfdsazxcvbnm"
                android:hint="请输入密码"
                android:maxLength="16"
                android:paddingBottom="@dimen/px_15"
                android:paddingTop="@dimen/px_15"
                android:password="true"/>

        </LinearLayout>

        <TextView
            android:id="@+id/login_forgotpwd_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/px_12"
            android:gravity="right"
            android:paddingBottom="@dimen/px_6"
            android:paddingLeft="@dimen/px_12"
            android:paddingRight="@dimen/px_12"
            android:paddingTop="@dimen/px_20"
            android:text="忘记密码？"
            android:textSize="@dimen/px_30"/>

        <Button
            android:id="@+id/login_but"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_36"
            android:layout_marginRight="@dimen/px_36"
            android:layout_marginTop="@dimen/px_40"
            android:background="@drawable/back_sel"
            android:text="登录"
            android:textColor="@color/color_FFFFFF"
            android:textSize="@dimen/px_35"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1">
        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/px_36"
            android:layout_marginRight="@dimen/px_36"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/px_1"
                android:layout_weight="1"
                android:background="#E0E0E0"></View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/px_15"
                android:text="合作账号登录"/>

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/px_1"
                android:layout_weight="1"
                android:background="#E0E0E0"></View>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/px_50"
            android:layout_marginTop="@dimen/px_15"
            android:gravity="center_horizontal"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/login_qq_im"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/px_10"
                android:src="@drawable/icon_qq"/>

            <ImageView
                android:id="@+id/login_wechat_im"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_50"
                android:padding="@dimen/px_10"
                android:src="@drawable/icon_weixin"/>

            <ImageView
                android:id="@+id/login_sina_im"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_50"
                android:padding="@dimen/px_10"
                android:src="@drawable/icon_weibo"
                />

        </LinearLayout>
    </LinearLayout>


    <!--注册-->
    <LinearLayout
        android:id="@+id/register_ly"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_FFFFFF"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/px_10"
            android:paddingLeft="@dimen/px_24"
            android:paddingRight="@dimen/px_36"
            android:paddingTop="@dimen/px_10">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/px_10"
                android:src="@drawable/icon_phone"/>

            <EditText
                android:id="@+id/register_phone_ed"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/px_20"
                android:background="@null"
                android:hint="请输入手机号"
                android:inputType="number"
                android:maxLength="11"
                android:textColorHint="@color/color_ccc"
                android:paddingBottom="@dimen/px_15"
                android:paddingTop="@dimen/px_15"/>

        </LinearLayout>
        <View
            android:background="@color/color_e0e0e0"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_1"></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/px_24"
            android:paddingRight="@dimen/px_36"
            android:background="@color/color_FFFFFF"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/px_10"
            android:paddingTop="@dimen/px_10">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/px_10"
                android:src="@drawable/icon_verification_code"/>

            <EditText
                android:id="@+id/register_code_ed"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/px_20"
                android:background="@null"
                android:paddingBottom="@dimen/px_15"
                android:paddingTop="@dimen/px_15"
                android:maxLength="6"
                android:textColorHint="@color/color_ccc"
                android:layout_weight="1"
                android:digits="0123456789qwertyuioplkjhgfdsazxcvbnm"
                android:hint="请输入验证码"
                android:inputType="number"/>


            <TextView
                android:id="@+id/register_getcode_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/px_20"
                android:background="@drawable/back_no"
                android:gravity="center"
                android:paddingBottom="@dimen/px_5"
                android:paddingLeft="@dimen/px_20"
                android:paddingRight="@dimen/px_20"
                android:paddingTop="@dimen/px_5"
                android:text="获取验证码"
                android:textColor="@color/color_1AB394"
                />


        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_85"
            android:background="@color/color_FFFFFF"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/px_10"
            android:paddingLeft="@dimen/px_24"
            android:paddingRight="@dimen/px_36"
            android:paddingTop="@dimen/px_10">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/px_10"
                android:src="@drawable/icon_verification_code"/>

            <EditText
                android:id="@+id/register_code_ed1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/px_20"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入验证码"
                android:textColorHint="@color/color_ccc"
                android:inputType="number"
                android:paddingBottom="@dimen/px_15"
                android:paddingTop="@dimen/px_15"/>


            <TextView
                android:id="@+id/register_getcode_tv1"
                android:layout_width="@dimen/px_150"
                android:textSize="@dimen/px_24"
                android:layout_height="@dimen/px_40"
                android:layout_marginRight="@dimen/px_10"
                android:background="@drawable/back_no"
                android:gravity="center"
                android:paddingBottom="@dimen/px_2"
                android:paddingTop="@dimen/px_2"
                android:text="获取验证码"
                android:textColor="@color/color_1AB394"
                />


        </LinearLayout>

        <View
            android:background="@color/color_e0e0e0"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_1"></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_FFFFFF"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/px_10"
            android:paddingLeft="@dimen/px_24"
            android:paddingRight="@dimen/px_36"
            android:paddingTop="@dimen/px_10">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/px_10"
                android:src="@drawable/icon_password"/>

            <EditText
                android:id="@+id/register_pwd_ed"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/px_20"
                android:background="@null"
                android:digits="0123456789qwertyuioplkjhgfdsazxcvbnm"
                android:hint="请输入6~16密码"
                android:maxLength="16"
                android:textColorHint="@color/color_ccc"
                android:paddingBottom="@dimen/px_15"
                android:paddingTop="@dimen/px_15"
                android:password="true"/>

        </LinearLayout>

        <View
            android:background="@color/color_e0e0e0"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_1"></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_FFFFFF"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/px_10"
            android:paddingLeft="@dimen/px_24"
            android:paddingRight="@dimen/px_36"
            android:paddingTop="@dimen/px_10">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/px_10"
                android:src="@drawable/icon_password"/>

            <EditText
                android:id="@+id/register_qpwd_ed"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/px_20"
                android:background="@null"
                android:hint="确认密码"
                android:digits="0123456789qwertyuioplkjhgfdsazxcvbnm"
                android:maxLength="16"
                android:paddingBottom="@dimen/px_15"
                android:textColorHint="@color/color_ccc"
                android:paddingTop="@dimen/px_15"
                android:password="true"/>

        </LinearLayout>

        <Button
            android:id="@+id/register_but"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_36"
            android:layout_marginRight="@dimen/px_36"
            android:layout_marginTop="@dimen/px_60"
            android:background="@drawable/back_sel"
            android:text="注册"
            android:textColor="@color/color_FFFFFF"
            android:textSize="@dimen/px_35"/>

    </LinearLayout>
</LinearLayout>
