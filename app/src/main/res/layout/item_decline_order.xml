<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
                android:background="@color/background"
              android:layout_marginBottom="@dimen/px_20"
              android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@color/color_white"
        android:paddingLeft="@dimen/px_20"
        android:paddingRight="@dimen/px_20"
        android:paddingTop="@dimen/px_10"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:layout_height="@dimen/px_84">
        <LinearLayout
            android:id="@+id/item_decline_shop"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/stor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/item_decline_studioname_tv"
                android:layout_marginLeft="@dimen/px_20"
                android:layout_width="wrap_content"
                android:textSize="@dimen/px_28"
                android:textColor="@color/color_333"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text=""
                android:layout_height="match_parent"/>

            <ImageView
                android:layout_marginLeft="@dimen/px_20"
                android:src="@drawable/btn_next"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </LinearLayout>



        <TextView
            android:id="@+id/item_declineorder_state_tv"
            android:gravity="right|center_vertical"
            android:layout_marginLeft="@dimen/px_20"
            android:textSize="@dimen/px_28"
            android:layout_width="match_parent"
            android:text=""
            android:layout_gravity="center_vertical"
            android:textColor="@color/color_FF5C0F"
            android:layout_height="match_parent"/>


    </LinearLayout>



    <View
        android:background="@color/color_white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_20"></View>

    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/color_f5f5f5"
        android:paddingLeft="@dimen/px_20"
        android:paddingRight="@dimen/px_20"
        android:layout_width="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:layout_height="@dimen/px_190">


        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/item_declineorder_img"
            android:layout_width="@dimen/px_170"
            android:layout_height="@dimen/px_170"
            fresco:placeholderImage="@drawable/gongzuoshi1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_150"
            android:orientation="vertical"
            android:paddingLeft="@dimen/px_10"
            android:paddingRight="@dimen/px_10">


            <TextView
                android:id="@+id/item_declineorder_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:textColor="@color/color_333"
                android:textSize="@dimen/px_26"
                android:text=""/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:visibility="invisible"
                android:orientation="horizontal">
                <ImageView
                    android:src="@drawable/icon_word1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/item_declineorder_type_tv"
                    android:layout_width="0dp"
                    android:layout_marginLeft="@dimen/px_4"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="100~500"
                    android:textColor="@color/color_999999"/>
            </LinearLayout>

            <TextView
                android:id="@+id/item_declineorder_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/px_10"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/actionsheet_red"/>




        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:background="@color/color_white"
        android:paddingLeft="@dimen/px_20"
        android:paddingRight="@dimen/px_20"
        android:gravity="right|center_vertical"
        android:paddingBottom="@dimen/px_15"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_106">
        <TextView
            android:id="@+id/item_declineorder_finished_tv"
            android:layout_marginRight="@dimen/px_20"
            android:gravity="center_vertical"
            android:text="订单完成"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_height="match_parent"/>


        <TextView
            android:id="@+id/item_declineorder_confirm_tv"
            android:layout_marginRight="@dimen/px_20"
            android:gravity="center_vertical"
            android:text="等待小编确认"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_height="match_parent"/>



        <TextView
            android:id="@+id/item_checkorder_evaluate_tv"
            android:visibility="gone"
            android:layout_marginRight="@dimen/px_20"
            android:paddingTop="@dimen/px_15"
            android:paddingBottom="@dimen/px_15"
            android:paddingLeft="@dimen/px_25"
            android:paddingRight="@dimen/px_25"
            android:background="@drawable/back_no"
            android:text="服务评价"
            android:textColor="@color/color_1AB394"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px_66"/>



        <TextView
            android:id="@+id/item_checkorder_confirmorder_tv"
            android:visibility="gone"
            android:layout_marginRight="@dimen/px_20"
            android:paddingTop="@dimen/px_15"
            android:paddingBottom="@dimen/px_15"
            android:paddingLeft="@dimen/px_25"
            android:paddingRight="@dimen/px_25"
            android:background="@drawable/back_no"
            android:text="订单确认"
            android:textColor="@color/color_1AB394"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px_66"/>



    </LinearLayout>


</LinearLayout>
