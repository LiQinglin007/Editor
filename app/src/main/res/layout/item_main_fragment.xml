<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              android:paddingLeft="@dimen/px_20"
              android:paddingRight="@dimen/px_20"
              android:background="@color/color_white"
              android:paddingTop="@dimen/px_20"
              android:paddingBottom="@dimen/px_20"
              android:layout_width="match_parent"
              android:layout_height="@dimen/px_200"
              android:orientation="horizontal">


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/item_main_img"
        android:layout_width="@dimen/px_160"
        android:layout_height="@dimen/px_160"
        fresco:placeholderImage="@drawable/fuwu"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_150"
        android:orientation="vertical"
        android:paddingLeft="@dimen/px_10"
        android:paddingRight="@dimen/px_10">


        <TextView
            android:textColor="@color/color_title"
            android:id="@+id/item_main_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:maxLines="2"
            android:text=""/>


        <TextView
            android:id="@+id/item_main_type_tv"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/px_10"
            android:layout_weight="1"
            android:text=""
            android:textColor="@color/color_1AB394"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_main_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/color_e20000"/>


            <TextView
                android:id="@+id/item_main_priceold_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginLeft="@dimen/px_10"
               />

            <TextView
                android:id="@+id/item_main_number_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="月销量0"
                android:textSize="@dimen/px_20"
                android:textColor="@color/color_999999"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
