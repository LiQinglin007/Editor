<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context="com.example.lql.editor.activity.service.ServiceDetailsActivity">

    <include layout="@layout/include_title_layout"></include>
    <ScrollView
        android:id="@+id/ServiceDetails_scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">


            <!--服务-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/px_20"
                android:paddingLeft="@dimen/px_20"
                android:paddingRight="@dimen/px_20"
                android:paddingTop="@dimen/px_20">


                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/service_details_img"
                    android:layout_width="@dimen/px_150"
                    android:layout_height="@dimen/px_150"
                    fresco:placeholderImage="@drawable/gongzuoshi1"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/px_10"
                    android:paddingRight="@dimen/px_10">


                    <TextView
                        android:id="@+id/service_details_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_333"
                        android:maxLines="2"
                        android:text=""/>


                    <TextView
                        android:id="@+id/service_details_number_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginTop="@dimen/px_10"
                        android:layout_weight="1"
                        android:text=""
                        android:textColor="@color/color_999999"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="@dimen/px_10"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/service_details_price_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/color_e50000"/>


                        <TextView
                            android:id="@+id/service_details_priceold_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/px_10"
                            android:text=""
                            android:textColor="@color/color_999999"
                            />

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>
            <!--工作室-->
            <LinearLayout
                android:id="@+id/studio_ly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_15"
                android:background="@color/color_white"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/px_20"
                android:paddingLeft="@dimen/px_20"
                android:paddingRight="@dimen/px_20"
                android:paddingTop="@dimen/px_20">


                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/heat_service_details_img"
                    android:layout_width="@dimen/px_150"
                    android:layout_height="@dimen/px_150"
                    fresco:placeholderImage="@drawable/gongzuoshi1"
                    fresco:roundAsCircle="true"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px_150"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/px_10"
                    android:paddingRight="@dimen/px_10">


                    <TextView
                        android:id="@+id/heat_service_details_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/color_333"/>

                    <TextView
                        android:id="@+id/heat_service_details_name_tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/px_10"
                        android:text=""
                        android:textSize="@dimen/px_20"/>

                    <TextView
                        android:id="@+id/heat_service_details_name_tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/px_10"
                        android:text=""
                        android:textSize="@dimen/px_20"/>

                    <TextView
                        android:id="@+id/heat_service_details_name_tv3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/px_10"
                        android:text=""
                        android:textSize="@dimen/px_20"/>

                </LinearLayout>

            </LinearLayout>
            <!--参数说明-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_15"
                android:background="@color/color_white"
                android:orientation="vertical"
                android:paddingLeft="@dimen/px_20"
                android:paddingRight="@dimen/px_20"
                android:paddingTop="@dimen/px_10">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="参数说明"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/px_28"/>

                <!--速审-->
                <LinearLayout
                    android:id="@+id/explain_ly1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px_15"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/explain_ly1_tv1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/px_5"
                        android:paddingTop="@dimen/px_10"
                        android:text="刊物级别："/>

                    <TextView
                        android:id="@+id/explain_ly1_tv2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/px_5"
                        android:paddingTop="@dimen/px_10"
                        android:text="复合影响因子："/>

                    <TextView
                        android:id="@+id/explain_ly1_tv3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/px_5"
                        android:paddingTop="@dimen/px_10"
                        android:text="综合影响因子："/>

                    <TextView
                        android:id="@+id/explain_ly1_tv4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/px_5"
                        android:paddingTop="@dimen/px_10"
                        android:text="录用学科范围："/>

                    <TextView
                        android:id="@+id/explain_ly1_tv5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/px_5"
                        android:paddingTop="@dimen/px_10"
                        android:text="初审周期："/>

                    <TextView
                        android:id="@+id/explain_ly1_tv6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/px_5"
                        android:paddingTop="@dimen/px_10"
                        android:text="复审周期："/>

                    <TextView
                        android:id="@+id/explain_ly1_tv7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/px_5"
                        android:paddingTop="@dimen/px_10"
                        android:text="终审周期："/>
                </LinearLayout>
                <!--查重-->
                <LinearLayout
                    android:id="@+id/explain_ly2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px_15"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/explain_ly2_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/px_5"
                        android:paddingTop="@dimen/px_10"
                        android:text="检测类型："/>

                </LinearLayout>
                <!--降重-->
                <LinearLayout
                    android:id="@+id/explain_ly3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px_15"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/explain_ly3_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/px_5"
                        android:paddingTop="@dimen/px_10"
                        android:text="学科范围："/>

                </LinearLayout>
            </LinearLayout>
            <!--详细介绍-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_15"
                android:background="@color/color_white"
                android:orientation="vertical"
                android:paddingBottom="@dimen/px_20"
                android:paddingLeft="@dimen/px_20"
                android:paddingRight="@dimen/px_20"
                android:paddingTop="@dimen/px_10">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="详细介绍"
                    android:textColor="@color/color_343434"
                    android:textSize="@dimen/px_28"/>

            </LinearLayout>


            <com.example.lql.editor.view.MyListView
                android:id="@+id/service_listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:dividerHeight="@dimen/px_20"
                android:background="@color/color_white"
                android:divider="@null">
            </com.example.lql.editor.view.MyListView>
        </LinearLayout>

    </ScrollView>

    <View
        android:layout_marginTop="@dimen/px_2"
        android:background="@color/color_e0e0e0"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_1"></View>
    <!--底部的菜单项-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_90"
        android:background="@color/color_white"
        android:orientation="horizontal">
        <!--收藏-->
        <LinearLayout
            android:id="@+id/service_bootom_collection_ly"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="@dimen/px_10"
            android:paddingTop="@dimen/px_10">

            <ImageView
                android:id="@+id/service_bootom_collection_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_5"
                android:src="@drawable/icon_collection_nor"/>

            <TextView
                android:id="@+id/service_bootom_collection_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_5"
                android:gravity="center"
                android:text="收藏服务"
                android:textSize="@dimen/px_20"/>

        </LinearLayout>

        <View
            android:layout_width="@dimen/px_1"
            android:layout_height="@dimen/px_90"
            android:background="@color/color_e0e0e0"></View>
        <!--QQ-->
        <LinearLayout
            android:id="@+id/service_bootom_qq_ly"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="@dimen/px_10"
            android:paddingTop="@dimen/px_10">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_5"
                android:src="@drawable/qq"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_5"
                android:gravity="center_horizontal"
                android:text="联系小编"
                android:textSize="@dimen/px_20"/>

        </LinearLayout>

        <View
            android:layout_width="@dimen/px_1"
            android:layout_height="@dimen/px_90"
            android:background="@color/color_e0e0e0"></View>
        <!--选择服务-->
        <LinearLayout
            android:id="@+id/service_bootom_type_ly"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/color_1AB394"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/px_10"
            android:paddingTop="@dimen/px_10">

            <TextView
                android:id="@+id/service_bootom_type_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text=""
                android:textColor="@color/color_white"
                android:textSize="@dimen/px_32"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
