<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/mySwipeRefresh"
    android:background="@color/background"
    tools:context="com.example.lql.editor.activity.myaccount.CheckOrderActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <include layout="@layout/include_title_layout"></include>

    <LinearLayout
        android:background="@color/color_white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="match_parent">
        </View>

        <LinearLayout
            android:id="@+id/checkorder_lay1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="@dimen/px_10"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/checkorder_tv1"
                android:text="收藏的服务"
                android:textColor="@color/color_1AB394"
                android:textSize="@dimen/px_30"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <View
                android:id="@+id/checkorder_v1"
                android:layout_marginTop="@dimen/px_8"
                android:background="@color/color_1AB394"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_4">

            </View>



        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="match_parent">
        </View>

        <LinearLayout
            android:id="@+id/checkorder_lay2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingTop="@dimen/px_10"
            android:orientation="vertical"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/checkorder_tv2"
                android:textSize="@dimen/px_30"
                android:text="收藏的工作室"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <View
                android:id="@+id/checkorder_v2"
                android:layout_marginTop="@dimen/px_8"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_4">

            </View>



        </LinearLayout>


        <View
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="match_parent">
        </View>

    </LinearLayout>

    <LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_weight="1"
    android:layout_height="wrap_content">


        <View
            android:background="@color/color_e0e0e0"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_1"></View>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/service_re"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>



    <android.support.v7.widget.RecyclerView
        android:id="@+id/studio_re"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>








</LinearLayout>

    <include layout="@layout/include_bottom"
        android:visibility="gone"></include>
    </LinearLayout>
</android.support.v4.widget.SwipeRefreshLayout>












