<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context="com.example.lql.editor.activity.myaccount.ToEvaluateActivity">


    <include layout="@layout/include_title_layout"></include>


    <EditText
        android:id="@+id/evaluate_content_ed"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_270"
        android:textColor="@color/color_999999"
        android:background="@color/color_white"
        android:gravity="start"
        android:hint="请输入此次服务评价"
        android:paddingLeft="@dimen/px_15"
        android:paddingTop="@dimen/px_15"
        android:textSize="@dimen/px_28"
        />


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_2"
        android:background="@color/color_C6C5C5"
        ></View>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/px_15"
        android:paddingTop="@dimen/px_10">

        <LinearLayout
            android:id="@+id/evaluate_good_ly"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/px_10"
            android:paddingTop="@dimen/px_10">


            <ImageView
                android:id="@+id/evaluate_good_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_choose_sel"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_30"
                android:text="好评"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_30"
                android:src="@drawable/icon_good"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/evaluate_bad_ly"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/px_10"
            android:paddingTop="@dimen/px_10">


            <ImageView
                android:id="@+id/evaluate_bad_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_choose_nor"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_30"
                android:text="差评"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_30"
                android:src="@drawable/icon_bad"/>

        </LinearLayout>

    </LinearLayout>


    <Button
        android:id="@+id/evaluate_submit_but"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_36"
        android:layout_marginRight="@dimen/px_36"
        android:layout_marginTop="@dimen/px_100"
        android:background="@drawable/back_sel"
        android:text="保存"
        android:textColor="@color/color_FFFFFF"
        android:textSize="@dimen/px_35"/>
</LinearLayout>
