<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="@dimen/px_20"
              android:background="@color/background"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_84"
        android:layout_gravity="center_vertical"
        android:background="@color/color_white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/px_20"
        android:paddingRight="@dimen/px_20"
        android:paddingTop="@dimen/px_10">

        <LinearLayout
            android:id="@+id/item_summaryorder_shop"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/stor"/>

            <TextView
                android:id="@+id/item_summaryorder_studioname_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/px_20"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/color_333"
                android:textSize="@dimen/px_28"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/px_20"
                android:src="@drawable/btn_next"/>
        </LinearLayout>


        <TextView
            android:id="@+id/item_summaryorder_state_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/px_20"
            android:gravity="right|center_vertical"
            android:text=""
            android:textColor="@color/color_FF5C0F"/>


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_20"
        android:background="@color/color_white"></View>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_190"
        android:layout_gravity="center_vertical"
        android:background="@color/color_f5f5f5"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/px_20"
        android:paddingRight="@dimen/px_20">


        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/item_summaryorder_img"
            android:layout_width="@dimen/px_170"
            android:layout_height="@dimen/px_170"
            fresco:placeholderImage="@drawable/gongzuoshi1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_150"
            android:orientation="vertical"
            android:paddingLeft="@dimen/px_10"
            android:paddingRight="@dimen/px_10">


            <TextView
                android:id="@+id/item_summaryorder_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text=""
                android:textColor="@color/color_333"
                android:textSize="@dimen/px_26"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_word1"/>

                <TextView
                    android:id="@+id/item_summaryorder_type_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:layout_marginLeft="@dimen/px_4"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/px_24"/>
            </LinearLayout>

            <!--<TextView-->
                <!--android:id="@+id/item_summaryorder_price_tv"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="0dp"-->
                <!--android:layout_marginTop="@dimen/px_10"-->
                <!--android:layout_weight="1"-->
                <!--android:text=""-->
                <!--android:textColor="@color/actionsheet_red"-->
                <!--android:textSize="@dimen/px_28"/>-->


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_106"
        android:background="@color/color_white"
        android:gravity="right|center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/px_15"
        android:paddingLeft="@dimen/px_20"
        android:paddingRight="@dimen/px_20">


        <TextView
            android:id="@+id/item_summaryorder_finished_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/px_20"
            android:gravity="center_vertical"
            android:text="订单完成"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/item_summaryorder_return_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/px_20"
            android:gravity="center_vertical"
            android:text="定金已退回"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/item_summaryorder_wait_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/px_20"
            android:gravity="center_vertical"
            android:text="等待复审"
            android:visibility="gone"/>


        <TextView
            android:id="@+id/item_summaryorder_cancelubmission_tv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px_66"
            android:layout_marginRight="@dimen/px_20"
            android:background="@drawable/back_no"
            android:paddingBottom="@dimen/px_15"
            android:paddingLeft="@dimen/px_25"
            android:paddingRight="@dimen/px_25"
            android:paddingTop="@dimen/px_15"
            android:text="取消投稿"
            android:textColor="@color/color_1AB394"
            android:visibility="gone"/>


        <TextView
            android:id="@+id/item_summaryorder_delete_tv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px_66"
            android:layout_marginRight="@dimen/px_20"
            android:background="@drawable/back_no"
            android:paddingBottom="@dimen/px_15"
            android:paddingLeft="@dimen/px_25"
            android:paddingRight="@dimen/px_25"
            android:paddingTop="@dimen/px_15"
            android:text="删除"
            android:textColor="@color/color_1AB394"
            android:visibility="gone"/>


        <TextView
            android:id="@+id/item_summaryorder_cancel_tv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px_66"
            android:layout_marginRight="@dimen/px_20"
            android:background="@drawable/back_no"
            android:paddingBottom="@dimen/px_15"
            android:paddingLeft="@dimen/px_25"
            android:paddingRight="@dimen/px_25"
            android:paddingTop="@dimen/px_15"
            android:text="取消"
            android:textColor="@color/color_1AB394"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/item_summaryorder_pay_tv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px_66"
            android:layout_marginRight="@dimen/px_20"
            android:background="@drawable/back_no"
            android:paddingBottom="@dimen/px_15"
            android:paddingLeft="@dimen/px_25"
            android:paddingRight="@dimen/px_25"
            android:paddingTop="@dimen/px_15"
            android:text="付款"
            android:textColor="@color/color_1AB394"
            android:visibility="gone"/>


        <TextView
            android:id="@+id/item_summaryorder_verification_tv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px_66"
            android:layout_marginRight="@dimen/px_20"
            android:background="@drawable/back_no"
            android:paddingBottom="@dimen/px_15"
            android:paddingLeft="@dimen/px_25"
            android:paddingRight="@dimen/px_25"
            android:paddingTop="@dimen/px_15"
            android:text="确认核实"
            android:textColor="@color/color_1AB394"
            android:visibility="gone"/>


        <TextView
            android:id="@+id/item_summaryorder_received_tv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px_66"
            android:layout_marginRight="@dimen/px_20"
            android:background="@drawable/back_no"
            android:paddingBottom="@dimen/px_15"
            android:paddingLeft="@dimen/px_25"
            android:paddingRight="@dimen/px_25"
            android:paddingTop="@dimen/px_15"
            android:text="确认收刊"
            android:textColor="@color/color_1AB394"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/item_summaryorder_evaluate_tv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px_66"
            android:layout_marginRight="@dimen/px_20"
            android:background="@drawable/back_no"
            android:paddingBottom="@dimen/px_15"
            android:paddingLeft="@dimen/px_25"
            android:paddingRight="@dimen/px_25"
            android:paddingTop="@dimen/px_15"
            android:text="服务评价"
            android:textColor="@color/color_1AB394"
            android:visibility="gone"/>

    </LinearLayout>


</LinearLayout>
