<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context="com.example.lql.editor.activity.myaccount.ToEvaluateActivity">


    <include layout="@layout/include_title_layout_right"></include>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_1"
        android:background="@color/color_e0e0e0"
        android:paddingBottom="@dimen/px_10"
        android:paddingTop="@dimen/px_5"></View>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:gravity="start"
        android:text="我的余额"
        android:textColor="@color/color_333"
        android:paddingLeft="@dimen/px_15"
        android:paddingTop="@dimen/px_15"
        android:textSize="@dimen/px_28"
        />


    <LinearLayout
        android:background="@color/color_white"
        android:paddingTop="@dimen/px_50"
        android:paddingBottom="@dimen/px_50"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <TextView
        android:id="@+id/wallet_money_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:gravity="end"
        android:text="0"
        android:textColor="@color/color_e50000"
        android:paddingLeft="@dimen/px_15"
        android:paddingTop="@dimen/px_15"
        android:textSize="@dimen/px_100"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/color_white"
            android:gravity="bottom|left"
            android:text="元"
            android:textColor="@color/actionsheet_red"
            android:paddingTop="@dimen/px_15"
            android:textSize="@dimen/px_50"
            />
    </LinearLayout>




    <Button
        android:id="@+id/wallet_recharge_but"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_36"
        android:layout_marginRight="@dimen/px_36"
        android:layout_marginTop="@dimen/px_100"
        android:background="#1AB394"
        android:text="充值"
        android:textColor="@color/color_FFFFFF"
        android:textSize="@dimen/px_35"/>

    <Button
        android:id="@+id/wallet_withdrawals_but"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_36"
        android:layout_marginRight="@dimen/px_36"
        android:layout_marginTop="@dimen/px_30"
        android:background="#E0E0E0"
        android:textColor="#333333"
        android:text="提现"
        android:textSize="@dimen/px_35"/>




</LinearLayout>
