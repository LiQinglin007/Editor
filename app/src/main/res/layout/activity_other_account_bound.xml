<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="com.example.lql.editor.activity.myaccount.OtherAccountBoundActivity">


    <include layout="@layout/include_title_layout"></include>
        <!--QQ-->
        <LinearLayout
            android:id="@+id/other_account_QQ_ly"
            android:layout_marginTop="@dimen/px_15"
            android:orientation="horizontal"
            android:background="@color/color_FFFFFF"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:paddingBottom="@dimen/px_25"
            android:paddingTop="@dimen/px_25"
            android:layout_height="@dimen/px_88">


            <ImageView
                android:id="@+id/other_account_QQ_img"
                android:layout_marginLeft="@dimen/px_20"
                android:src="@drawable/qq_nor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="QQ"
                android:textColor="@color/color_333"
                android:textSize="@dimen/px_30"
                android:layout_marginLeft="@dimen/px_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/other_account_QQ_tv"
                android:layout_marginLeft="@dimen/px_20"
                android:text="未绑定"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/px_30"
                android:gravity="right"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>


            <ImageView
                android:layout_marginLeft="@dimen/px_20"
                android:src="@drawable/btn_next"
                android:layout_marginRight="@dimen/px_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    <View
        android:background="@color/color_e0e0e0"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_1"
        ></View>


    <!--微信-->

        <LinearLayout
            android:id="@+id/other_account_wachat_ly"
            android:orientation="horizontal"
            android:background="@color/color_FFFFFF"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:paddingBottom="@dimen/px_25"
            android:paddingTop="@dimen/px_25"
            android:layout_height="@dimen/px_88">


            <ImageView
                android:id="@+id/other_account_wachat_img"
                android:layout_marginLeft="@dimen/px_20"
                android:src="@drawable/weixin_nor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="@dimen/px_30"
                android:text="微信"
                android:textColor="@color/color_333"
                android:layout_marginLeft="@dimen/px_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textSize="@dimen/px_30"
                android:id="@+id/other_account_wachat_tv"
                android:layout_marginLeft="@dimen/px_20"
                android:textColor="@color/color_999999"
                android:text="未绑定"
                android:gravity="right"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>


            <ImageView
                android:layout_marginLeft="@dimen/px_20"
                android:src="@drawable/btn_next"
                android:layout_marginRight="@dimen/px_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>


    <View
        android:background="@color/color_e0e0e0"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_1"
        ></View>



        <!--新浪微博-->
        <LinearLayout
            android:id="@+id/other_account_sina_ly"
            android:orientation="horizontal"
            android:background="@color/color_FFFFFF"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:paddingBottom="@dimen/px_25"
            android:paddingTop="@dimen/px_25"
            android:layout_height="@dimen/px_88">


            <ImageView
                android:id="@+id/other_account_sina_img"
                android:layout_marginLeft="@dimen/px_20"
                android:src="@drawable/weibo_nor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textSize="@dimen/px_30"
                android:text="新浪微博"
                android:layout_marginLeft="@dimen/px_20"
                android:layout_width="wrap_content"
                android:textColor="@color/color_333"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"/>

            <TextView
                android:textSize="@dimen/px_30"
                android:id="@+id/other_account_sina_tv"
                android:layout_marginLeft="@dimen/px_20"
                android:text="未绑定"
                android:textColor="@color/color_999999"
                android:gravity="right"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>


            <ImageView
                android:layout_marginLeft="@dimen/px_20"
                android:src="@drawable/btn_next"
                android:layout_marginRight="@dimen/px_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

</LinearLayout>
