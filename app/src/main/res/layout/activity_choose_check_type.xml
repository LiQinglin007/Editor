<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_choose_check_type"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.lql.editor.activity.main.ChooseCheckTypeActivity">


    <include layout="@layout/include_title_layout"></include>


    <ImageView
        android:src="@drawable/banner"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_280"/>



    <ImageView
        android:id="@+id/choose_periodical_img"
        android:layout_marginTop="@dimen/px_30"
        android:layout_marginLeft="@dimen/px_60"
        android:layout_marginRight="@dimen/px_60"
        android:src="@drawable/btn_qikan"

        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <ImageView
        android:id="@+id/choose_degree_img"
        android:layout_marginTop="@dimen/px_30"
        android:layout_marginLeft="@dimen/px_60"
        android:layout_marginRight="@dimen/px_60"
        android:src="@drawable/btn_xuewei"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <ImageView
        android:id="@+id/choose_undergraduate_img"
        android:layout_marginTop="@dimen/px_30"
        android:layout_marginLeft="@dimen/px_60"
        android:layout_marginRight="@dimen/px_60"
        android:src="@drawable/btn_benke"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <ImageView
        android:id="@+id/choose_master_img"
        android:layout_marginTop="@dimen/px_30"
        android:layout_marginLeft="@dimen/px_60"
        android:layout_marginRight="@dimen/px_60"
        android:src="@drawable/btn_shuobo"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/px_20"
        android:layout_height="0dp"/>





</LinearLayout>
